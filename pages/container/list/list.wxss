/* pages/container/list/list.wxss */

.list {
    display: flex;
    flex-wrap: wrap;
}

.item_parent {
    height: 300px;
    /*align-items: center;*/
    flex: 0 0 33.3333%;
    background: #883e36;
    position: relative;

    box-sizing: border-box;
    border-color: #888888;
    border-style: solid;
}

.item {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    width: 200rpx;
    height: 268rpx;
    border-color: #888888;
    border-style: solid;
    border-width: medium;
    border-radius: 12rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.avatar{
    margin-left: auto;
    margin-right: auto;
    width: 160rpx;
    height: 160rpx;
}

.name{
    text-align: center;
    background: lawngreen;
    font-size: 36rpx;
}

.numb{
    text-align: center;
    position: absolute;
    height: 44rpx;
    width: 44rpx;

    border-color: #888888;
    border-style: solid;
    border-width: 1px;
    border-radius: 12rpx;
}